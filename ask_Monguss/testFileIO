from student import Student
from instructor import Instructor


def readInUsers():
    allUsers = list()
    users = open('usernames.txt', 'r')
    i = 0

    for line in users:
        infoList = line.strip().split(',')
        print infoList

        if infoList[2] == str(0):
            allUsers.append(Student(infoList[0], infoList[1]))
        elif infoList[2] == str(1):
            allUsers.append(Instructor(infoList[0], infoList[1]))
        i+=1
    return allUsers

if __name__ == '__main__':
    allusers = readInUsers()
    print len(allusers)
    for i in range(0, len(allusers), 1):
        allusers[i].printInfo()


